@model Data.DTO.RegistratorVM;
@{
	Layout = "_FullLayout";
}
<style>

	#notification {
		position: fixed;
		bottom: 20px;
		right: 10px;
		background-color: #b3e5fc;
		color: white;
		padding: 15px;
		z-index: 9999;
	}
</style>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center mb-5">
			<h2 class="heading-section">Đăng ký tài khoản</h2>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="login-wrap p-0">
				<h3 class="mb-4 text-center">Nhập thông tin tài khoản</h3>
				<form method="post" class="signin-form">
					<div class="form-group d-flex">
		
						<label asp-for="FullName" style="width:150px" class="control-label mt-2"></label>
						<input id="fullname" type="fullname" class="form-control" placeholder="Nhập họ và tên" asp-for="FullName" required>
					</div>
					<div class="form-group d-flex">
						<label asp-for="Username" style="width:150px" class="control-label mt-2"></label>
						<input type="text" class="form-control" asp-for="Username" placeholder="Nhập username" required>
					</div>

					<div class="form-group d-flex">
						<label asp-for="Email" style="width:150px" class="control-label mt-2"></label>
						<input id="email" type="email" class="form-control" placeholder="Nhập email" asp-for="Email" required>
					</div>
					<div class="form-group d-flex">
						<label asp-for="Password" style="width:150px" class="control-label mt-2"></label>
						<input id="password-field" type="password" class="form-control" placeholder="Nhập mật khẩu" asp-for="Password" required>
						<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>
					<div class="form-group d-flex">
						<label asp-for="PhoneNumber" style="width:150px" class="control-label mt-2"></label>
						<input id="PhoneNumber" type="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" asp-for="PhoneNumber" required>

					</div>
					<div class="form-group d-flex">
						<label asp-for="Address" style="width:150px" class="control-label mt-2"></label>
						<input id="address" type="text" class="form-control" placeholder="Nhập địa chỉ" asp-for="Address" required>

					</div>
					<div class="form-group d-flex">
						<label asp-for="BirthDay" style="width:150px" class="control-label mt-2"></label>
						<input id="birthday" type="date" class="form-control" placeholder="Ngày sinh" asp-for="BirthDay" required>

					</div>
					<div class="form-group d-flex">
						<label asp-for="EducationName" style="width:150px" class="control-label mt-2"></label>
						<input id="educationName" type="text" class="form-control" placeholder="Nhập tên trường học" asp-for="EducationName" required>

					</div>
					<div class="form-group d-flex">
						<button class=" px-3 button-mmc" type="submit">Đăng ký</button>
						
					</div>
				</form>
				<p class="w-100 text-center">Đã có tài khoản </p>
				<div class="form-group ">
					<a asp-action="Index" asp-controller="Authen" class="x-3 button-mmc">Đăng nhập</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="card" id="notification" style="display:none;">@ViewBag.Message</div>
<script>
	 $(document).ready(function () {
		if ($("#notification").length) {
			showNotification(5000);
		}
    });
	function showNotification(duration) {
		notification.style.display = "block";
		setTimeout(function () {
			$('#notification').fadeOut();
		}, duration);
	}
</script>