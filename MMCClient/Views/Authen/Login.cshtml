@model Data.ViewModel.LoginVM;
@{
	Layout = "_FullLayout";
}
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center mb-5">
			<h2 class="heading-section">Đăng Nhập</h2>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-4">
			<div class="login-wrap p-0">
				<h3 class="mb-4 text-center">Bạn đã có tài khoản?</h3>
				<form  method="post" class="signin-form">
					<div class="form-group">
						<input type="text" class="form-control" asp-for="username" placeholder="Username" required>
					</div>
					<div class="form-group">
						<input id="password-field" type="password" class="form-control" placeholder="Password" asp-for="password" required>
						<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>
					<div class="form-group ">
						<button class=" px-3 button-mmc" type="submit">Đăng nhập</button>
					</div>
				</form>
				<p class="w-100 text-center">Đăng ký tài khoản</p>
				<div class="form-group ">
					<a asp-action="Register" asp-controller="Authen" class="x-3 button-mmc">Đăng ký </a>
				</div>
			</div>
		</div>
	</div>
</div>
