@model Data.DTO.ClassDTO;
@{
    Layout = "_LayoutAdmin";
}

<div class="row flex-grow">
    <div class="col-12 grid-margin stretch-card">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title card-title-dash">Tạo lớp mới</h4>
                        <p class="card-subtitle card-subtitle-dash"></p>
                    </div>
                </div>
                <div class="table-responsive  mt-1">
                    <form method="post" enctype="multipart/form-data" accept-charset="UTF-8">
                        <div>
                            <label asp-for="ClassName" style="font-weight: bold;"></label>

                            <input class="form-control my-3" id="ClassName" name="ClassName" asp-for="ClassName" required></input>

                        </div>
                        <div>
                            <label asp-for="ClassType.ClassTypeId" style="font-weight: bold;"></label>
                            <select name="ClassTypeId" asp-items="@ViewBag.ClassTypeSelectList" class="form-control my-3" placeholder="Chọn loại lớp" id="ClassTypeId" required>
                            </select>
                        </div>

                        <div>
                            <button class="btn btn-primary btn-xl btn-color" type="submit">Lưu</button>
                        </div>
                    </form>
                    <a asp-controller="Class" asp-action="Index" class="primary mt-3">Danh sách lớp</a>
                </div>
            </div>
        </div>
    </div>
</div>
