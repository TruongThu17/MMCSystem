@model Data.DTO.AccountStudentDTO;
@{
    Layout = "_LayoutAdmin";
}

<div class="row flex-grow">
    <div class="col-12 grid-margin stretch-card">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title card-title-dash">Tạo tài khoản của học sinh</h4>
                        <p class="card-subtitle card-subtitle-dash"></p>
                    </div>
                </div>
                <div class="table-responsive  mt-1">
                    <form method="post" enctype="multipart/form-data" accept-charset="UTF-8">
                        @* <input type="text" asp-for="" id="ID" name="ID" hidden /> *@
                        <div>
                            <label asp-for="Username" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="Username">

                        </div>
                        <div>
                            <label asp-for="FullName" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="FullName">

                        </div>
                        <div>
                            <label asp-for="Email" style="font-weight: bold;"></label>

                            <input type="email" class="form-control" asp-for="Email">
                        </div>
                        <div>
                            <label asp-for="PhoneNumber" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="PhoneNumber">
                        </div>
                        <div>
                            <label asp-for="Address" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="Address">
                        </div>
                        <div>
                            <label asp-for="ParentFullName" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="ParentFullName">
                        </div>
                        <div>
                            <label asp-for="ClassId" style="font-weight: bold;"></label>
                            <select name="ClassId" asp-items="@ViewBag.ClassSelectList" class="form-control my-3" placeholder="Chọn lớp" id="ClassId" required>
                            </select>
                        </div>
                        <div>
                            <label asp-for="BirthDay" style="font-weight: bold;"></label>
                            <input type="datetime-local" class="form-control" asp-for="BirthDay">
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-primary btn-xl btn-color" type="submit">Lưu</button>
                        </div>
                    </form>
                    <a asp-controller="Account" asp-action="StudentList" class="primary mt-3">Danh sách các tài khoản</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card" id="notification" style="display:none;">@ViewBag.Message</div>
<style>

    #notification {
        position: fixed;
        bottom: 20px;
        right: 10px;
        background-color: #b3e5fc;
        color: white;
        padding: 15px;
        z-index: 9999;
    }
</style>

<script>
    $(document).ready(function () {
        if ($("#notification").length) {
            showNotification(5000);
        }
    });
    function showNotification(duration) {
        notification.style.display = "block";
        setTimeout(function () {
            $('#notification').fadeOut();
        }, duration);
    }
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ImgPreview').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>