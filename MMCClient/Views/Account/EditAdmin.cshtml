@model Data.DTO.AccountAdminDTO;
@{
    Layout = "_LayoutSuperAdmin";
}

<div class="row flex-grow">
    <div class="col-12 grid-margin stretch-card">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title card-title-dash">Chỉnh sửa thông tin tài khoản </h4>
                        <p class="card-subtitle card-subtitle-dash"></p>
                    </div>
                </div>
                <div class="table-responsive  mt-1">
                    <form method="post" enctype="multipart/form-data" accept-charset="UTF-8">
                        <input type="text" asp-for="@Model.Username" id="ID" name="ID" hidden />
                        <div>
                            <label asp-for="FullName" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="FullName" readonly>

                        </div>
                        <div>
                            <label asp-for="Email" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="Email" readonly>
                        </div>
                        <div>
                            <label asp-for="Phone" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="Phone" readonly>
                        </div>
                        <div>
                            <label asp-for="Address" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="Address" readonly>
                        </div>
                        <div>
                            <label asp-for="EducationName" style="font-weight: bold;"></label>

                            <input type="text" class="form-control" asp-for="EducationName" readonly>
                        </div>
                        <div>
                            <label asp-for="BirthDay" style="font-weight: bold;"></label>
                            <input type="text" class="form-control" asp-for="BirthDay" readonly>
                        </div>
                        <div>
                            <label asp-for="Status" style="font-weight: bold;"></label>
                            <input type="checkbox" class="mt-2" name="Status" @(Model.Status.HasValue && Model.Status.Value ? "checked" : "") />
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-primary btn-xl btn-color" type="submit">Lưu</button>
                        </div>
                    </form>
                    <a asp-controller="Account" asp-action="AdminList" class="primary mt-3">Danh sách các tài khoản quản trị</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ImgPreview').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>