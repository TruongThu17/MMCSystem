@model HomeA;

@{
    Layout = "_LayoutAdmin";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="home-tab">
                <div class="d-sm-flex align-items-center justify-content-between border-bottom">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active ps-0" asp-action="Index" asp-controller="AdminHome">Trang chủ</a>
                        </li>
                    </ul>
                    <div>
                        
                    </div>
                </div>
                <div class="tab-content tab-content-basic">
                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="statistics-details d-flex align-items-center justify-content-between">
                                    <div>
                                        <p class="statistics-title">Học sinh</p>
                                        <h3 class="rate-percentage">@Model.CountAcc</h3>
                                    </div>
                                    <div>
                                        <p class="statistics-title">Đặt suất ăn</p>
                                        <h3 class="rate-percentage">@Model.CountOrder</h3>
                                    </div>
                                    <div>
                                        <p class="statistics-title">Chi tháng</p>
                                        <h3 class="rate-percentage">@string.Format("{0:N0} đ", Model.Month)</h3>
                                    </div>
                                    <div class="d-none d-md-block">
                                        <p class="statistics-title">Chi ngày</p>
                                        <h3 class="rate-percentage">@string.Format("{0:N0} đ", Model.Day)</h3>
                                    </div>

                                    <div class="d-none d-md-block">
                                        <p class="statistics-title">Đối tác</p>
                                        <h3 class="rate-percentage">@Model.CountSup</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8 d-flex flex-column">
                                <div class="row flex-grow">
                                    <div class="col-12 grid-margin stretch-card">
                                        <div class="card card-rounded">
                                            <div class="card-body">
                                                <div class="d-sm-flex justify-content-between align-items-start">
                                                    <div>
                                                        <h4 class="card-title card-title-dash">Tài khoản</h4>
                                                        <p class="card-subtitle card-subtitle-dash"> Bạn có @Model.CountAcc học sinh</p>
                                                    </div>
                                                    <div>
                                                        <a asp-action="Create" asp-controller="Account" class="btn btn-primary btn-lg text-white mb-0 me-0">
                                                            <i class="mdi mdi-account-plus"></i> Tạo tài khoản
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="table-responsive  mt-1">
                                                    <table class="table select-table">
                                                        <thead>
                                                            <tr>
                                                                <th>Họ tên </th>
                                                                <th>Email</th>
                                                                <th>Số điện thoại</th>
                                                                <th>Ngày sinh</th>
                                                                <th>Địa chỉ</th>
                                                                <th>Tên lớp</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (Data.DTO.AccountStudentDTO item in Model.Accounts)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        @item.FullName
                                                                    </td>
                                                                    <td>
                                                                        @item.Email
                                                                    </td>
                                                                    <td>
                                                                        @item.PhoneNumber
                                                                    </td>
                                                                    
                                                                    <td>
                                                                        @item.BirthDay
                                                                    </td>
                                                                    <td>
                                                                        @item.Address
                                                                    </td>
                                                                    <td>
                                                                        @item.ClassName
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="list align-items-center pt-3">
                                                    <div class="wrapper w-100">
                                                        <p class="mb-0">
                                                            <a asp-action="StudentList" asp-controller="Account" class="fw-bold text-primary">
                                                                Xem tất cả <i class="mdi mdi-arrow-right ms-2"></i>
                                                            </a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 d-flex flex-column">
                                <div class="row flex-grow">
                                    <div class="col-12 grid-margin stretch-card">
                                        <div class="card card-rounded">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <h4 class="card-title card-title-dash">Đối tác</h4>
                                                            <div class="add-items d-flex mb-0">
                                                                <!-- <input type="text" class="form-control todo-list-input" placeholder="What do you need to do today?"> -->
                                                                <a asp-action="Create" asp-controller="Supplier" class="add btn btn-icons btn-rounded btn-primary todo-list-add-btn text-white me-0 pl-12p">
                                                                    <i class="mdi mdi-plus"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <div class="list-wrapper">

                                                            <ul class="todo-list todo-list-rounded">
                                                                 @foreach (Data.DTO.SupplierDTO item in Model.Suppliers)
                                                            {
                                                                    <a class="d-block" asp-action="Edit" asp-controller="Supplier" asp-route-id="@item.SupplierId">
                                                                    @item.SupplierName
                                                                </a>
                                                            }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row flex-grow">
                                    <div class="col-12 grid-margin stretch-card">
                                        <div class="card card-rounded">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <h4 class="card-title card-title-dash">Đặt suất ăn</h4>
                                                            <div class="add-items d-flex mb-0">
                                                                <!-- <input type="text" class="form-control todo-list-input" placeholder="What do you need to do today?"> -->
                                                                <a asp-action="Create" asp-controller="Ingredient" class="add btn btn-icons btn-rounded btn-primary todo-list-add-btn text-white me-0 pl-12p">
                                                                    <i class="mdi mdi-plus"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <div class="list-wrapper">
                                                            <ul class="todo-list todo-list-rounded">
                                                                <table class="table select-table">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Tên kế hoạch </th>
                                                                            <th>Lớp order</th>
                                                                            <th>Số lượng</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (Data.DTO.OrderDTO item in Model.Orders)
                                                                        {
                                                                            <tr>
                                                                                <td>
                                                                                    @item.MealPlan.MealPlanName
                                                                                </td>
                                                                                <td>
                                                                                    @item.Class.ClassName
                                                                                </td>
                                                                                <td>
                                                                                    @item.Quantity
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                                
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>